<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
													android:elevation="2dp"
													android:padding="10dp"
                                                   android:layout_margin="10dp"
                                                   android:background="@android:color/white">

	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/img_item_photo_fav"
		android:layout_width="55dp"
		android:layout_height="55dp"
		android:layout_marginEnd="16dp"
		android:layout_marginStart="10dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:src="@android:color/black"
		android:layout_centerVertical="true"
		android:orientation="vertical"/>

	<TextView
		android:id="@+id/tv_itemName_fav"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toEndOf="@+id/img_item_photo_fav"
		app:layout_constraintTop_toTopOf="@id/img_item_photo_fav"
		android:layout_marginStart="16dp"
		android:textSize="21sp"
		android:textStyle="bold"
		android:textColor="@color/black"
		tools:text="Nama User" />


	<TextView
		android:id="@+id/tv_itemDetail_fav"
		android:layout_width="120dp"
		android:layout_height="21dp"
		android:layout_marginStart="16dp"
		android:textSize="14sp"
		android:ellipsize="end"
		android:maxLines="1"
		android:textColor="@color/teal_700"
		app:layout_constraintStart_toEndOf="@+id/img_item_photo_fav"
		app:layout_constraintBottom_toBottomOf="@id/img_item_photo_fav"
		android:singleLine="true"
		tools:text="Detail" />

	<TextView
		android:id="@+id/tv_itemDetail2_fav"
		android:layout_width="100dp"
		android:layout_height="21dp"
		android:layout_marginEnd="60dp"
		android:ellipsize="end"
		android:maxLines="1"
		android:singleLine="true"
		android:textColor="@color/teal_700"
		android:textSize="14sp"
		app:layout_constraintBottom_toBottomOf="@id/img_item_photo_fav"
		app:layout_constraintEnd_toEndOf="parent"
		tools:text="Detail"/>
	<ImageButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/deletethis"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="10dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		android:src="@drawable/ic_baseline_delete_outline_24"
	/>
</androidx.constraintlayout.widget.ConstraintLayout>